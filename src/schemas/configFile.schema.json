{
  "title": "Config File Schema",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "settings": {
      "type": "object",
      "properties": {
        "databaseURI": {
          "type": "string"
        },
        "yearToShow": {
          "type": "number",
          "minimum": 1900
        },
        "theme": {
          "type": "string",
          "enum": ["dark", "light"]
        },
        "language": {
          "type": "string",
          "enum": ["de-DE", "en-US"]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
