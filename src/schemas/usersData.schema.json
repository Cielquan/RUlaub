{
  "title": "Users Data Schema",
  "description": "Schema for users data coming from the backend",
  "type": "object",
  "properties": {
    "id": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "workdays": { "$ref": "#/$defs/workdays" },
        "userStats": { "$ref": "#/$defs/userStat" },
        "vacations": {
          "type": "array",
          "items": { "$ref": "#/$defs/vacation" }
        }
      },
      "required": ["name", "workdays", "userStats", "vacations"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "workdays": {
      "type": "object",
      "properties": {
        "monday": { "type": "boolean" },
        "tuesday": { "type": "boolean" },
        "wednesday": { "type": "boolean" },
        "thursday": { "type": "boolean" },
        "friday": { "type": "boolean" },
        "saturday": { "type": "boolean" },
        "sunday": { "type": "boolean" }
      },
      "required": [
        "monday",
        "tuesday",
        "wednesday",
        "thursday",
        "friday",
        "saturday",
        "sunday"
      ],
      "additionalProperties": false
    },
    "userStat": {
      "type": "object",
      "properties": {
        "availableVacationDays": { "type": "number" },
        "takenVacationDays": { "type": "number" },
        "vacationStats": {
          "type": "array",
          "items": { "$ref": "#/$defs/vacationStat" }
        }
      },
      "required": ["availableVacationDays", "takenVacationDays", "vacationStats"],
      "additionalProperties": false
    },
    "vacationStat": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "count": { "type": "number" }
      },
      "required": ["type", "count"],
      "additionalProperties": false
    },
    "vacation": {
      "type": "object",
      "properties": {
        "startDate": { "$ref": "#/$defs/ISODate" },
        "startYearDay": { "type": "number" },
        "endDate": { "$ref": "#/$defs/ISODate" },
        "endYearDay": { "type": "number" },
        "hexColor": { "type": "number" }
      },
      "required": ["startDate", "startYearDay", "endDate", "endYearDay", "hexColor"],
      "additionalProperties": false
    },
    "ISODate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  }
}
