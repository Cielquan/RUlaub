{
  "title": "Public Holidays Data Schema",
  "description": "Schema for public holiday data coming from the backend",
  "type": "object",
  "patternProperties": {
    "^\\d+$": { "$ref": "#/$defs/publicHolidayData" }
  },
  "additionalProperties": false,
  "$defs": {
    "publicHolidayData": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "date": { "$ref": "#/$defs/ISODate" },
        "yearDay": { "type": "number" }
      },
      "required": ["name", "yearDay"],
      "additionalProperties": false
    },
    "ISODate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  }
}
