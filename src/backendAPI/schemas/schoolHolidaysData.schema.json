{
  "title": "School Holidays Data Schema",
  "description": "Schema for school holiday data coming from the backend",
  "type": "object",
  "patternProperties": {
    "^\\d+$": { "$ref": "#/$defs/schoolHolidayData" }
  },
  "additionalProperties": false,
  "$defs": {
    "schoolHolidayData": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "startDate": { "$ref": "#/$defs/ISODate" },
        "startYearDay": { "type": "number" },
        "endDate": { "$ref": "#/$defs/ISODate" },
        "endYearDay": { "type": "number" }
      },
      "required": ["name", "startYearDay", "endYearDay"],
      "additionalProperties": false
    },
    "ISODate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  }
}
