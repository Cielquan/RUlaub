{
  "title": "School Holidays Data Schema",
  "description": "Schema for school holiday data coming from the backend",
  "type": "object",
  "patternProperties": {
    "^\\d+$": { "$ref": "#/$defs/schoolHolidayData" }
  },
  "additionalProperties": false,
  "$defs": {
    "schoolHolidayData": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "start": {
          "type": "object",
          "properties": {
            "date": { "$ref": "#/$defs/ISODate" },
            "yearDay": {
              "type": "number",
              "description": "gets calculated in frontend on date selection in form"
            },
            "year": {
              "type": "number",
              "description": "gets calculated in frontend on date selection in form"
            }
          },
          "required": ["date", "yearDay", "year"],
          "additionalProperties": false
        },
        "end": {
          "type": "object",
          "properties": {
            "date": { "$ref": "#/$defs/ISODate" },
            "yearDay": {
              "type": "number",
              "description": "gets calculated in frontend on date selection in form"
            },
            "year": {
              "type": "number",
              "description": "gets calculated in frontend on date selection in form"
            }
          },
          "required": ["date", "yearDay", "year"],
          "additionalProperties": false
        }
      },
      "required": ["name", "start", "end"],
      "additionalProperties": false
    },
    "ISODate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  }
}
