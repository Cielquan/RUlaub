{
  "title": "Config File Schema",
  "description": "Schema for config file read by the backend",
  "type": "object",
  "properties": {
    "user": {
      "type": ["object", "null"],
      "properties": {
        "name": { "type": ["string", "null"] }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "settings": {
      "type": "object",
      "properties": {
        "databaseUri": { "type": ["string", "null"] },
        "language": { "$ref": "#/$defs/LanguageData" },
        "logLevel": { "$ref": "#/$defs/LogLevel" },
        "theme": { "$ref": "#/$defs/SupportedThemes" },
        "yearChangeScrollBegin": { "type": "boolean" },
        "yearToShow": {
          "type": ["null", "number"],
          "minimum": 1900
        }
      },
      "required": [
        "databaseUri",
        "language",
        "logLevel",
        "theme",
        "yearChangeScrollBegin",
        "yearToShow"
      ],
      "additionalProperties": false
    }
  },
  "required": ["user", "settings"],
  "additionalProperties": false,
  "$defs": {
    "LogLevel": {
      "type": "string",
      "enum": ["TRACE", "DEBUG", "INFO", "WARNING", "ERROR"]
    },
    "SupportedLanguages": {
      "type": "string",
      "enum": ["de-DE", "en-US"]
    },
    "SupportedLanguagesShort": {
      "type": "string",
      "enum": ["deDE", "enUS"]
    },
    "SupportedThemes": {
      "type": "string",
      "enum": ["dark", "light"]
    },
    "LanguageData": {
      "type": "object",
      "properties": {
        "dateMask": { "type": "string" },
        "importName": { "$ref": "#/$defs/SupportedLanguagesShort" },
        "locale": { "$ref": "#/$defs/SupportedLanguages" },
        "name": { "type": "string" }
      },
      "required": ["dateMask", "importName", "locale", "name"],
      "additionalProperties": false
    }
  }
}
