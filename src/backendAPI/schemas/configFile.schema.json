{
  "title": "Config File Schema",
  "description": "Schema for config file read by the backend",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      },
      "additionalProperties": false
    },
    "settings": {
      "type": "object",
      "properties": {
        "databaseURI": { "type": "string" },
        "yearToShow": {
          "type": "number",
          "minimum": 1900
        },
        "theme": { "$ref": "#/$defs/SupportedThemes" },
        "language": { "$ref": "#/$defs/SupportedLanguages" },
        "logLevel": { "$ref": "#/$defs/LogLevel" },
        "todayAutoscrollLeftOffset": { "type": "number" },
        "yearChangeScrollBegin": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "LogLevel": {
      "type": "string",
      "enum": ["TRACE", "DEBUG", "INFO", "WARNING", "ERROR"]
    },
    "SupportedLanguages": {
      "type": "string",
      "enum": ["de-DE", "en-US"]
    },
    "SupportedThemes": {
      "type": "string",
      "enum": ["dark", "light"]
    }
  }
}
