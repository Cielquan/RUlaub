{
  "title": "Users Data Schema",
  "description": "Schema for users data coming from the backend",
  "type": "object",
  "patternProperties": {
    "^\\d+$": { "$ref": "#/$defs/userData" }
  },
  "additionalProperties": false,
  "$defs": {
    "userData": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "workdays": { "$ref": "#/$defs/workdays" },
        "userStats": { "$ref": "#/$defs/userStat" },
        "vacations": {
          "type": "array",
          "items": { "$ref": "#/$defs/vacation" }
        }
      },
      "required": ["name", "workdays", "userStats", "vacations"],
      "additionalProperties": false
    },
    "workdays": {
      "type": "object",
      "properties": {
        "monday": { "type": "boolean" },
        "tuesday": { "type": "boolean" },
        "wednesday": { "type": "boolean" },
        "thursday": { "type": "boolean" },
        "friday": { "type": "boolean" },
        "saturday": { "type": "boolean" },
        "sunday": { "type": "boolean" }
      },
      "required": [
        "monday",
        "tuesday",
        "wednesday",
        "thursday",
        "friday",
        "saturday",
        "sunday"
      ],
      "additionalProperties": false
    },
    "userStat": {
      "type": "object",
      "properties": {
        "availableVacationDays": { "type": "number" },
        "takenVacationDays": {
          "type": "number",
          "description": "gets calculated in backend on load from DB for current year"
        },
        "vacationStats": {
          "type": "array",
          "items": { "$ref": "#/$defs/vacationStat" }
        }
      },
      "required": ["availableVacationDays", "takenVacationDays", "vacationStats"],
      "additionalProperties": false
    },
    "vacationStat": {
      "type": "object",
      "description": "gets calculated in backend on load from DB for current year",
      "properties": {
        "type": { "type": "string" },
        "count": { "type": "number" }
      },
      "required": ["type", "count"],
      "additionalProperties": false
    },
    "vacation": {
      "type": "object",
      "properties": {
        "id": { "type": "number" },
        "typeId": { "type": "number" },
        "start": {
          "type": "object",
          "properties": {
            "date": { "$ref": "#/$defs/ISODate" },
            "yearDay": {
              "type": "number",
              "description": "gets calculated in frontend on date selection in form"
            },
            "year": {
              "type": "number",
              "description": "gets calculated in frontend on date selection in form"
            }
          },
          "required": ["date", "yearDay", "year"],
          "additionalProperties": false
        },
        "end": {
          "type": "object",
          "properties": {
            "date": { "$ref": "#/$defs/ISODate" },
            "yearDay": {
              "type": "number",
              "description": "gets calculated in frontend on date selection in form"
            },
            "year": {
              "type": "number",
              "description": "gets calculated in frontend on date selection in form"
            }
          },
          "required": ["date", "yearDay", "year"],
          "additionalProperties": false
        }
      },
      "required": ["id", "typeId", "start", "end"],
      "additionalProperties": false
    },
    "ISODate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  }
}
