{
  "title": "Public Holidays Data Schema",
  "description": "Schema for public holiday data coming from the backend",
  "$comment": "Pattern is Public Holiday ID",
  "type": "object",
  "patternProperties": {
    "^\\d+$": { "$ref": "#/$defs/publicHolidayData" }
  },
  "additionalProperties": false,
  "$defs": {
    "publicHolidayData": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/$defs/DateBasedHoliday" },
        { "$ref": "#/$defs/EasterBasedHoliday" }
      ]
    },
    "DateBasedHoliday": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "yearlessDate": { "$ref": "#/$defs/YearlessISODate" },
        "easterSundayOffset": { "type": "number" },
        "year": { "type": "number" },
        "calc": {
          "type": "object",
          "description": "gets calculated in backend on load from DB",
          "properties": {
            "yearDay": { "type": "number" }
          },
          "required": ["yearDay"],
          "additionalProperties": false
        }
      },
      "required": ["name", "yearlessDate", "calc"],
      "additionalProperties": false
    },
    "EasterBasedHoliday": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "yearlessDate": { "$ref": "#/$defs/YearlessISODate" },
        "easterSundayOffset": { "type": "number" },
        "year": { "type": "number" },
        "calc": {
          "type": "object",
          "description": "gets calculated in backend on load from DB",
          "properties": {
            "yearDay": { "type": "number" }
          },
          "required": ["yearDay"],
          "additionalProperties": false
        }
      },
      "required": ["name", "easterSundayOffset", "calc"],
      "additionalProperties": false
    },
    "YearlessISODate": {
      "type": "string",
      "pattern": "^\\d{2}-\\d{2}$"
    }
  }
}
