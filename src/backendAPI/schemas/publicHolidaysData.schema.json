{
  "title": "Public Holidays Data Schema",
  "description": "Schema for public holiday data coming from the backend",
  "type": "object",
  "patternProperties": {
    "^\\d+$": { "$ref": "#/$defs/publicHolidayData" }
  },
  "additionalProperties": false,
  "$defs": {
    "publicHolidayData": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/$defs/DateBasedHoliday" },
        { "$ref": "#/$defs/EasterBasedHoliday" }
      ]
    },
    "DateBasedHoliday": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "yearlessDate": { "$ref": "#/$defs/YearlessISODate" },
        "easterSundayOffset": { "type": "number" },
        "year": { "type": "number" },
        "yearDay": { "type": "number" }
      },
      "required": ["name", "yearDay", "yearlessDate"],
      "additionalProperties": false
    },
    "EasterBasedHoliday": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "yearlessDate": { "$ref": "#/$defs/YearlessISODate" },
        "easterSundayOffset": { "type": "number" },
        "year": { "type": "number" },
        "yearDay": { "type": "number" }
      },
      "required": ["name", "yearDay", "easterSundayOffset"],
      "additionalProperties": false
    },
    "YearlessISODate": {
      "type": "string",
      "pattern": "^\\d{2}-\\d{2}$"
    }
  }
}
